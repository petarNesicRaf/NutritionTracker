<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pcl">




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pc">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_item_day" android:id="@+id/monday" />
        <include layout="@layout/layout_item_day" android:id="@+id/tuesday"/>
        <include layout="@layout/layout_item_day" android:id="@+id/wednesday"/>
        <include layout="@layout/layout_item_day" android:id="@+id/thursday"/>
        <include layout="@layout/layout_item_day" android:id="@+id/friday"/>
        <include layout="@layout/layout_item_day" android:id="@+id/saturday"/>
        <include layout="@layout/layout_item_day" android:id="@+id/sunday"/>
    </LinearLayout>

    </FrameLayout>

    
</androidx.constraintlayout.widget.ConstraintLayout>